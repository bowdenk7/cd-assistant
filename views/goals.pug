extends layout

block content
  .page-header
    h3 _Project_ Goals

  h3 Add Goals
  form.form-horizontal(id='create-goals-form', action='/goals', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='goal') Goal
      .col-sm-7
        input.form-control(type='text', name='goal', id='goal')
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Add